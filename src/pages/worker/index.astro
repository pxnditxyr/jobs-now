---
import { Icon } from 'astro-icon/components'
import AdminLayout from '@/modules/admin/layouts/AdminLayout.astro'

const initialServices = [
  { id: 1, name: 'Reparaci√≥n de Plomer√≠a', status: 'Completado', income: 150 },
  { id: 2, name: 'Instalaci√≥n El√©ctrica', status: 'En Progreso', income: 0 },
  { id: 3, name: 'Pintura de Interiores', status: 'Pendiente', income: 0 },
]

const initialReviews = [
  { id: 1, service: 'Reparaci√≥n de Plomer√≠a', rating: 5, comment: 'Excelente trabajo, muy profesional.' },
  { id: 2, service: 'Instalaci√≥n El√©ctrica', rating: 4, comment: 'Buen servicio, pero lleg√≥ un poco tarde.' },
]


const reviews = initialReviews

const services = initialServices

const calculateTotalIncome = () => {
  return services.reduce((total, service) => total + service.income, 0)
}

const calculateAverageRating = () => {
  const totalRating = reviews.reduce((sum, review) => sum + review.rating, 0)
  return reviews.length > 0 ? (totalRating / reviews.length).toFixed(1) : 'N/A'
}


