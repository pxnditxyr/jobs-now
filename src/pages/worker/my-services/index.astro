---

<WorkersLayout>
  <div class="bg-gray-100">
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Bienvenido, { user.name } 游녦</h2>

        <div class="min-h-screen bg-gray-100 p-4 sm:p-6 md:p-8">
          <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-gray-800">
              <i class="mdi mdi-account-hard-hat text-blue-500 mr-2"></i>Panel de Trabajador
            </h1>

            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
              <button
                class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition-colors flex items-center justify-center"
              >
                <i class="mdi mdi-plus-circle-outline mr-2"></i>Crear Nuevo Servicio
              </button>
            </div>

            <div class="space-y-6">
              {services.map(service => (
              <div id={`service-${service.id}`} class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src={service.imageUrl} alt={service.title} class="w-full h-48 object-cover" />
                <div class="p-6 relative">
                  <div class="absolute top-2 right-2">
                    <button
                      class="text-gray-500 hover:text-gray-700"
                    >
                      <i class="mdi mdi-dots-vertical text-xl"></i>
                    </button>
                    <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-10 hidden">
                      <div class="py-1">
                        <button
                          class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 w-full text-left"
                        >
                          Editar
                        </button>
                        <button
                          class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 w-full text-left"
                        >
                          Eliminar
                        </button>
                      </div>
                    </div>
                  </div>
                  <h3 class="text-xl font-semibold mb-2 text-gray-800">{service.title}</h3>
                  <p class="text-gray-600 mb-4">{service.description}</p>
                  <div class="flex justify-between items-center mb-4">
                    <span class="text-sm text-gray-500">
                      <i class="mdi mdi-calendar mr-1"></i>
                      {service.createdAt.toLocaleDateString()}
                    </span>
                    <span class="text-sm font-semibold text-yellow-500">
                      <i class="mdi mdi-star mr-1"></i>
                      {service.starCost} estrellas
                    </span>
                  </div>
                  <div class="flex items-center mb-4">
                    <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">
                      { categories.find( ( _, index ) => index.toString() === service.categoryId ) || 'Sin categor칤a' }
                    </span>
                  </div>
                  <h4 class="text-lg font-semibold mb-2 text-gray-700">Comentario Reciente</h4>

                  <button
                    class="w-full bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600 transition-colors"
                  >
                    <i class="mdi mdi-comment-multiple-outline mr-2"></i>Ver todos los comentarios
                  </button>
                </div>
              </div>
              ))}
            </div>
          </div>

          {/* Modal para editar servicio */}
          <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
            <div class="bg-white rounded-lg p-6 w-full max-w-md">
              <h2 class="text-2xl font-semibold mb-4 text-gray-700">
                <i class="mdi mdi-pencil text-blue-500 mr-2"></i>Editar Servicio
              </h2>
              <form class="space-y-4">
                <div>
                  <label for="editTitle" class="block text-sm font-medium text-gray-700">T칤tulo</label>
                  <input
                    type="text"
                    id="editTitle"
                    name="title"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    required
                  />
                </div>
                <div>
                  <label for="editDescription" class="block text-sm font-medium text-gray-700">Descripci칩n</label>
                  <textarea
                    id="editDescription"
                    name="description"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    rows={3}
                    required
                  ></textarea>
                </div>
                <div>
                  <label for="editImageUrl" class="block text-sm font-medium text-gray-700">URL de la imagen</label>
                  <input
                    type="url"
                    id="editImageUrl"
                    name="imageUrl"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    required
                  />
                </div>
                <div>
                  <label for="editStarCost" class="block text-sm font-medium text-gray-700">Costo en estrellas</label>
                  <input
                    type="number"
                    id="editStarCost"
                    name="starCost"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    min="0"
                    required
                  />
                </div>
                <div>
                  <label for="editCategoryId" class="block text-sm font-medium text-gray-700">Categor칤a</label>
                  <select
                    id="editCategoryId"
                    name="categoryId"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    required
                  >
                    <option value="">Selecciona una categor칤a</option>
                    {categories.map((category, index) => (
                    <option value={index.toString()}>{category}</option>
                    ))}
                  </select>
                </div>
                <div class="flex justify-end space-x-2">
                  <button
                    type="button"
                    class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors"
                  >
                    Cancelar
                  </button>
                  <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
                    Guardar Cambios
                  </button>
                </div>
              </form>
            </div>
          </div>

          {/* Modal para comentarios */}
          <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
            <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[80vh] overflow-y-auto">
              <h2 class="text-2xl font-semibold mb-4 text-gray-700">
                <i class="mdi mdi-comment-multiple-outline text-green-500 mr-2"></i>Comentarios
              </h2>
              <div class="space-y-4 mb-6">

              </div>
              <form  class="space-y-4">
                <div>
                  <label for="rating" class="block text-sm font-medium text-gray-700">Calificaci칩n</label>
                  <select
                    id="rating"
                    name="rating"
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    required
                  >
                    {[1, 2, 3, 4, 5].map(num => (
                    <option value={num}>{num} estrellas</option>
                    ))}
                  </select>
                </div>
                <div>
                  <label for="comment" class="block text-sm font-medium text-gray-700">Comentario</label>
                  <textarea
                    id="comment"
                    name="comment"
                    rows={3}
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                    required
                  ></textarea>
                </div>
                <div class="flex justify-end space-x-2">
                  <button
                    type="button"
                    class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors"
                  >
                    Cerrar
                  </button>
                  <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors">
                    Agregar Comentario
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</WorkersLayout>
