    title: 'Limpieza de hogar',
    description: 'Servicio de limpieza profunda para hogares',
    imageUrl: 'https://example.com/cleaning.jpg',
    starCost: 2,
    createdAt: new Date('2023-06-01'),
    updatedAt: new Date('2023-06-01'),
