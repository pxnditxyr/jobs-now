---
import AdminLayout from '@/modules/admin/layouts/AdminLayout.astro'
import Navbar from '@/modules/shared/components/Navbar.astro'
import { Icon } from 'astro-icon/components'

---

<AdminLayout>
  <h1
    class="text-5xl font-bold"
  >Dashboard</h1>
    <div class="bg-[#1e1e3a] rounded-xl p-4 flex flex-col gap-12 justify-center items-center">
      <div class="text-xl font-bold"> Estadísticas Generales </div>
      <div class="flex flex-wrap gap-6">
        <div class="stat-card">
          <div class="stat-value">1,234</div>
          <div class="stat-label">Trabajadores Activos</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">5,678</div>
          <div class="stat-label">Clientes Registrados</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">789</div>
          <div class="stat-label">Servicios en Progreso</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">$123,456</div>
          <div class="stat-label">Ingresos del Mes</div>
        </div>
      </div>
    </div>
  <div class="bg-[#1e1e3a] rounded-xl p-8 flex flex-col gap-12 justify-center items-center">
    <div class="text-xl">Tendencias de Contratación</div>
    <div class="w-full flex items-center justify-center">
      <div class="h-[290px] w-[650px]">
        <img src="https://optyestadistica.wordpress.com/wp-content/uploads/2010/01/graflineas.png" alt="Gráfico de tendencias de contratación" class="w-full h-full object-cover">
      </div>
    </div>
  </div>
    <div class="bg-[#1e1e3a] rounded-xl p-8 flex flex-col gap-12 justify-center items-center">
      <div class="text-xl font-bold"> Últimas Contrataciones </div>
      <table>
        <thead>
          <tr>
            <th>Trabajador</th>
            <th>Cliente</th>
            <th>Servicio</th>
            <th>Fecha</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>María González</td>
            <td>TechSolutions Inc.</td>
            <td>Desarrollo Web</td>
            <td>2023-05-15</td>
            <td>En Progreso</td>
          </tr>
          <tr>
            <td>Carlos Rodríguez</td>
            <td>Green Gardens</td>
            <td>Diseño de Jardines</td>
            <td>2023-05-14</td>
            <td>Completado</td>
          </tr>
          <tr>
            <td>Ana Martínez</td>
            <td>FoodDelight Restaurant</td>
            <td>Chef Temporal</td>
            <td>2023-05-13</td>
            <td>Pendiente</td>
          </tr>
          <tr>
            <td>Javier López</td>
            <td>EduTech Academy</td>
            <td>Tutoría en Matemáticas</td>
            <td>2023-05-12</td>
            <td>En Progreso</td>
          </tr>
        </tbody>
      </table>
    </div>
</AdminLayout>
<style>

.logo {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
  color: #4a4ae6;
}
.menu-item {
  margin-bottom: 15px;
  cursor: pointer;
  transition: color 0.3s;
}
.menu-item:hover {
  color: #4a4ae6;
}
.widget {
  background-color: #1e1e3a;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}
.stat-card {
  background-color: #2a2a4a;
  border-radius: 8px;
  padding: 15px;
  text-align: center;
}
.stat-value {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 5px;
  color: white;
}
.stat-label {
  font-size: 14px;
  color: #a0a0a0;
}
.chart-container {
  height: 300px;
  margin-top: 20px;
}
table {
  width: 100%;
  border-collapse: collapse;
}
th, td {
  padding: 12px;
  text-align: left;
  color: white;
  border-bottom: 1px solid #2a2a4a;
}
th {
  background-color: #2a2a4a;
  color: white;
}
</style>
