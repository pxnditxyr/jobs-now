---
import { Icon } from 'astro-icon/components'
const { isLoggedIn, user } = Astro.locals;

---

<nav class="flex justify-between px-20 py-10 items-center bg-white w-full">

  <div class="flex items-center">
    <Icon
      name="icon"
      size={ 60 }
    />
    <h1 class="text-xl text-gray-800 font-bold">
      Quality Soft
    </h1>
  </div>
  <div class="flex items-center">
    <ul class="flex items-center space-x-6">
      <li class="font-semibold text-gray-700">
        <a href="/">Home</a>
      </li>
      {
        ( user?.role === 'admin' ) && (
          <li class="font-semibold text-gray-700">
            <a href="/admin/dashboard">Admin</a>
          </li>
        )
      }

      {
        !isLoggedIn ? (
          <li class="font-semibold text-gray-700">
            <a href="/login">Ingresar</a>
          </li>
        ) : (
          <li id="logout" class="font-semibold text-gray-700">
            <a href="#">Salir</a>
          </li>
        )
      }
    </ul>
  </div>
</nav>

<script>
  const { signOut } = await import( 'auth-astro/client' )

  const logoutElement = document.querySelector( '#logout' ) as HTMLLIElement

  logoutElement.addEventListener('click', async () => {
    await signOut()
    window.location.href = '/auth/signin'
  });
</script>
