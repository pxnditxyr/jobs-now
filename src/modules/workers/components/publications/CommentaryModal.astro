<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[80vh] overflow-y-auto">
    <h2 class="text-2xl font-semibold mb-4 text-gray-700">
      <i class="mdi mdi-comment-multiple-outline text-green-500 mr-2"></i>Comentarios
    </h2>
    <div class="space-y-4 mb-6">

    </div>
    <form  class="space-y-4">
      <div>
        <label for="rating" class="block text-sm font-medium text-gray-700">Calificaci√≥n</label>
        <select
          id="rating"
          name="rating"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          required
        >
          {[1, 2, 3, 4, 5].map(num => (
          <option value={num}>{num} estrellas</option>
          ))}
        </select>
      </div>
      <div>
        <label for="comment" class="block text-sm font-medium text-gray-700">Comentario</label>
        <textarea
          id="comment"
          name="comment"
          rows={3}
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
          required
        ></textarea>
      </div>
      <div class="flex justify-end space-x-2">
        <button
          type="button"
          class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors"
        >
          Cerrar
        </button>
        <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors">
          Agregar Comentario
        </button>
      </div>
    </form>
  </div>
</div>
